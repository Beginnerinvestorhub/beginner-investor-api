{
  "name": "backend-api",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for Beginner Investor Hub",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/index.ts",
    "build": "npm run clean && tsc && tsc-alias",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --coverage=false --testPathPattern=__tests__/unit",
    "test:integration": "jest --coverage=false --testPathPattern=__tests__/integration",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:reset": "prisma migrate reset",
    "prisma:pull": "prisma db pull",
    "prisma:push": "prisma db push",
    "prisma:status": "prisma migrate status",
    "warm-cache": "ts-node scripts/warm-cache.ts",
    "warm-cache:dev": "cross-env NODE_ENV=development ts-node scripts/warm-cache.ts",
    "warm-cache:prod": "cross-env NODE_ENV=production node dist/scripts/warm-cache.js",
    "docs:serve": "ts-node src/docs/serve-docs.ts",
    "docs:build": "cp src/docs/openapi.yaml public/openapi.yaml",
    "docker:build": "docker build -t backend-api .",
    "docker:run": "docker run -p 3000:3000 backend-api",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "healthcheck": "curl -f http://localhost:3000/health || exit 1",
    "healthcheck:full": "node scripts/health-check.js",
    "prestart": "npm run build && npm run prisma:generate",
    "predev": "npm run prisma:generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "affiliate": "^4.0.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "paywall": "^1.0.0",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "stripe": "^14.25.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.17",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.6.2",
    "prisma": "^5.22.0",
    "superagent": "^10.2.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["eslint", "prettier"]
    }
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
