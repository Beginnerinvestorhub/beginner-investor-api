{
  "frontend": {
    "platform": "vercel",
    "framework": "nextjs",
    "buildCommand": "npm run build",
    "environment": {
      "NEXT_PUBLIC_FIREBASE_CONFIG": {
        "apiKey": "${FIREBASE_API_KEY}",
        "authDomain": "${FIREBASE_AUTH_DOMAIN}",
        "projectId": "${FIREBASE_PROJECT_ID}",
        "appId": "${FIREBASE_APP_ID}"
      },
      "NEXT_PUBLIC_API_URL": "https://backend-api.onrender.com",
      "NEXT_PUBLIC_AI_SERVICE_URL": "https://ai-microservice-engine.onrender.com",
      "NEXT_PUBLIC_MARKET_DATA_URL": "https://marketdata-ingestion.onrender.com",
      "NEXT_PUBLIC_RISK_ENGINE_URL": "https://python-risk-engine.onrender.com",
      "NEXT_PUBLIC_PORTFOLIO_SIMULATION_URL": "https://portfolio-simulation.onrender.com"
    }
  },
  "services": {
    "backend-api": {
      "platform": "render",
      "type": "web",
      "plan": "starter",
      "scaling": {
        "minInstances": 1,
        "maxInstances": 3
      },
      "environmentGroups": [
        "firebase",
        "redis",
        "database"
      ]
    },
    "marketdata-ingestion": {
      "platform": "render",
      "type": "web",
      "plan": "starter",
      "scaling": {
        "minInstances": 1,
        "maxInstances": 2
      },
      "environmentGroups": [
        "redis",
        "database",
        "market-data"
      ]
    },
    "ai-microservice-engine": {
      "platform": "render",
      "type": "web",
      "plan": "starter",
      "scaling": {
        "minInstances": 1,
        "maxInstances": 2
      },
      "environmentGroups": [
        "redis",
        "openai",
        "behavioral"
      ]
    },
    "python-risk-engine": {
      "platform": "render",
      "type": "web",
      "plan": "starter",
      "scaling": {
        "minInstances": 1,
        "maxInstances": 2
      },
      "environmentGroups": [
        "redis",
        "database"
      ]
    },
    "portfolio-simulation": {
      "platform": "render",
      "type": "web",
      "plan": "starter",
      "scaling": {
        "minInstances": 1,
        "maxInstances": 2
      },
      "environmentGroups": [
        "redis",
        "database"
      ]
    }
  },
  "infrastructure": {
    "firebase": {
      "features": [
        "authentication",
        "cloud-messaging",
        "analytics"
      ]
    },
    "redis": {
      "provider": "redis.com",
      "features": {
        "rateLimit": {
          "window": "15m",
          "max": 100
        },
        "cache": {
          "defaultTTL": 3600
        },
        "session": {
          "maxAge": 86400
        }
      }
    },
    "database": {
      "platform": "render",
      "type": "postgresql",
      "version": "17",
      "plan": "starter"
    }
  }
}