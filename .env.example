# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/beginner_investor_db
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=10000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50

# Service Ports
BACKEND_PORT=3000
RISK_ENGINE_PORT=3001
MARKET_DATA_PORT=3002
AI_SERVICE_PORT=3003

# Security
JWT_SECRET=your-jwt-secret-key
COOKIE_SECRET=your-cookie-secret
API_KEY=your-api-key

# External APIs
MARKET_DATA_API_KEY=your-market-data-api-key
FINNHUB_API_KEY=your-finnhub-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
OPENAI_API_KEY=your-openai-api-key

# Environment
NODE_ENV=production
FLASK_ENV=production

# CORS
CORS_ORIGIN=https://your-frontend-domain.com

# Feature Flags
RISK_CALCULATION_ENABLED=true
BEHAVIORAL_NUDGE_ENABLED=true

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=info

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100