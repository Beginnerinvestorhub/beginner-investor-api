# =============================================================================
# .env.development - Development Environment Configuration
# =============================================================================

# =====================
# Application Settings
# =====================
NODE_ENV=development
PORT=3000
APP_NAME=BeginnerInvestorHub (Development)
APP_VERSION=1.0.0-dev
APP_URL=http://localhost:3000

# =====================
# Database Configuration
# =====================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fintech_dev_db
DB_USER=postgres
DB_PASSWORD=dev_password_123
DATABASE_URL=postgresql://postgres:dev_password_123@localhost:5432/fintech_dev_db

# =====================
# Redis Configuration
# =====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# =====================
# External API Keys (Development/Test Keys)
# =====================
ALPHA_VANTAGE_API_KEY=demo
FINNHUB_API_KEY=sandbox_api_key
POLYGON_API_KEY=test_api_key
QUANDL_API_KEY=test_api_key

# AI Configuration (Cost-effective for development)
OPENAI_API_KEY=sk-test-key-replace-with-real-key
AI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.5

# =====================
# Service URLs (Development)
# =====================
BACKEND_API_URL=http://localhost:3000
MARKET_DATA_SERVICE_URL=http://localhost:8001
AI_SERVICE_URL=http://localhost:8002
RISK_ENGINE_URL=http://localhost:8003
PORTFOLIO_SERVICE_URL=http://localhost:8004
NUDGE_ENGINE_URL=http://localhost:8005
NOTIFICATION_SERVICE_URL=http://localhost:8006

# =====================
# Development Settings
# =====================
# Faster intervals for development
DATA_INGESTION_INTERVAL=60
NUDGE_CHECK_INTERVAL=300

# Reduced workers for local development
RISK_CALCULATION_WORKERS=2
SIMULATION_WORKERS=1
AI_MAX_CONCURRENT_REQUESTS=3

# Development flags
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=true
SEED_DATABASE=true
SWAGGER_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty
SENTRY_ENVIRONMENT=development

# Authentication (Development)
JWT_SECRET=dev_jwt_secret_minimum_32_characters_long_for_security
NEXTAUTH_SECRET=dev_nextauth_secret_for_local_development
NEXTAUTH_URL=http://localhost:3000

# Stripe Test Keys
STRIPE_PUBLISHABLE_KEY=pk_test_development_key
STRIPE_SECRET_KEY=sk_test_development_key

# CORS (Allow all origins in development)
CORS_ORIGIN=*

# Feature flags (Enable all in development)
PAYWALL_ENABLED=true
AFFILIATE_MARKETING_ENABLED=true
BEHAVIORAL_NUDGES_ENABLED=true
AI_ANALYSIS_ENABLED=true
PORTFOLIO_SIMULATION_ENABLED=true
