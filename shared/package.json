{
  "name": "@beginnerinvestorhub/shared",
  "version": "1.0.0",
  "description": "Shared utilities and types for Beginner Investor Hub",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm-run-all clean build:prod",
    "build:prod": "tsc --build tsconfig.prod.json --pretty",
    "build:dev": "tsc --build tsconfig.json --pretty",
    "build:watch": "npm-run-all --parallel watch:*",
    "watch:tsc": "tsc --build tsconfig.json --watch --preserveWatchOutput --pretty",
    "watch:lint": "esw . --ext .ts --color --format=stylish -w",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts --format=stylish --max-warnings=50",
    "lint:fix": "eslint . --ext .ts --fix --format=stylish",
    "lint:debug": "eslint . --ext .ts --debug",
    "type-check": "tsc --noEmit --pretty",
    "type-check:watch": "tsc --noEmit --watch --preserveWatchOutput --pretty",
    "test": "node test-with-coverage.js",
    "test:watch": "cross-env NODE_ENV=test jest --watch --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles --forceExit",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --coverageDirectory=coverage --coverageReporters=lcov text",
    "test:ci": "cross-env NODE_ENV=test jest --ci --runInBand --coverage",
    "validate": "npm-run-all --print-label --parallel --continue-on-error type-check lint test",
    "dev": "npm-run-all --parallel watch:*",
    "prepublishOnly": "npm run validate",
    "prepare": "npm run build",
    "debug:ts-node": "cross-env NODE_OPTIONS='--inspect' ts-node --transpile-only"
  },
  "keywords": [
    "shared",
    "utilities",
    "types"
  ],
  "author": "Beginner Investor Hub",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.22",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "coveralls": "^3.1.1",
    "cross-env": "^10.1.0",
    "esbuild-runner": "^2.2.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "build": "^0.1.4",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.3.0",
    "joi": "^17.9.0",
    "pino": "^8.14.0",
    "pino-pretty": "^10.0.0",
    "redis": "^4.6.0",
    "winston": "^3.11.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
