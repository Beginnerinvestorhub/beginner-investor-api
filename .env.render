# Environment variables for each service

# Backend API Service
BACKEND_PORT=3000
BACKEND_JWT_SECRET=your-jwt-secret
BACKEND_COOKIE_SECRET=your-cookie-secret
BACKEND_CORS_ORIGIN=https://your-frontend-url.vercel.app

# Python Risk Engine
RISK_ENGINE_PORT=3001
RISK_CALCULATION_WORKERS=2
RISK_ENGINE_LOG_LEVEL=info

# Market Data Service
MARKET_DATA_PORT=3002
MARKET_DATA_API_KEY=your-market-data-key
FINNHUB_API_KEY=your-finnhub-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
MARKET_DATA_CACHE_TTL=300

# AI Microservice (with Nudge Engine)
AI_SERVICE_PORT=3003
OPENAI_API_KEY=your-openai-key
MODEL_API_ENDPOINT=https://api.openai.com/v1
AI_MODEL_VERSION=gpt-4
BEHAVIORAL_NUDGE_ENABLED=true
NUDGE_REFRESH_INTERVAL=3600
NUDGE_STRATEGIES=["risk_awareness","investment_education","goal_setting"]
NUDGE_MODEL_CONFIG={
  "temperature": 0.7,
  "max_tokens": 150,
  "presence_penalty": 0.6
}

# Portfolio Simulation Service
PORTFOLIO_SIM_PORT=3004
SIMULATION_WORKERS=2
MAX_PORTFOLIO_SIZE=100

# Shared Infrastructure
DATABASE_URL=postgresql://user:password@host:5432/investor_db
REDIS_URL=redis://host:6379
NODE_ENV=production
DEBUG=false

# Service URLs
RISK_ENGINE_URL=https://python-risk-engine.onrender.com
MARKET_DATA_URL=https://market-data-service.onrender.com
AI_SERVICE_URL=https://ai-microservice.onrender.com
BACKEND_URL=https://backend-api.onrender.com
PORTFOLIO_SIM_URL=https://portfolio-simulation.onrender.com

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn
APM_SERVICE_NAME=beginner-investor-hub