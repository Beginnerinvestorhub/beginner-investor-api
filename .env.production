# Service Configuration
NODE_ENV=production
DEBUG=false

# Port Configuration
BACKEND_PORT=3000
INVESTMENT_ENGINE_PORT=3001
AI_ENGINE_PORT=3002

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/investor_db
DATABASE_MAX_CONNECTIONS=10
DATABASE_POOL_TIMEOUT=10000

# Redis Configuration
REDIS_URL=redis://host:6379
REDIS_MAX_CONNECTIONS=20

# Security
JWT_SECRET=your-jwt-secret
COOKIE_SECRET=your-cookie-secret
CORS_ORIGIN=https://your-frontend-url.vercel.app

# API Keys
OPENAI_API_KEY=your-openai-api-key
MARKET_DATA_API_KEY=your-market-data-api-key
FINNHUB_API_KEY=your-finnhub-api-key

# Feature Flags
RISK_CALCULATION_ENABLED=true
BEHAVIORAL_NUDGE_ENABLED=true

# Service URLs
BACKEND_URL=https://backend-api.onrender.com
INVESTMENT_ENGINE_URL=https://investment-engine.onrender.com
AI_ENGINE_URL=https://ai-engine.onrender.com

# Performance Tuning
RISK_CALCULATION_WORKERS=2
AI_MODEL_CACHE_TTL=3600
MARKET_DATA_CACHE_TTL=300

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
