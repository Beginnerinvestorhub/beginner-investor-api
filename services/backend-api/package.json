{
  "name": "backend-api",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for Beginner Investor Hub",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "node test-with-coverage.js",
    "test:watch": "jest --watch",
    "test:unit": "jest --coverage=false --testPathPattern=__tests__/unit",
    "test:debug": "node debug-tests.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "warm-cache": "ts-node scripts/warm-cache.ts",
    "warm-cache:dev": "cross-env NODE_ENV=development ts-node scripts/warm-cache.ts",
    "warm-cache:prod": "cross-env NODE_ENV=production node dist/scripts/warm-cache.js",
    "docs:serve": "ts-node src/docs/serve-docs.ts",
    "docs:build": "cp src/docs/openapi.yaml public/openapi.yaml",
    "docker:build": "docker build -t backend-api .",
    "docker:run": "docker run -p 3000:3000 backend-api",
    "healthcheck": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "affiliate": "^4.0.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "firebase": "^12.4.0",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "paywall": "^1.0.0",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "stripe": "^14.25.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "yamljs": "^0.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.17",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "pnpm": "^10.18.2",
    "prettier": "^3.6.2",
    "prisma": "^5.22.0",
    "superagent": "^10.2.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint",
        "prettier"
      ]
    }
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
