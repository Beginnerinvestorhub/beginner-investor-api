# Behavioral Nudge Engine Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8005
DEBUG=false

# CORS Configuration
CORS_ORIGINS=https://your-domain.vercel.app,http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@your-host:5432/your-database

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Service Integration URLs
AI_MICROSERVICE_URL=http://localhost:8002
RISK_ENGINE_URL=http://localhost:8003
MARKET_DATA_URL=http://localhost:8001

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Logging
LOG_LEVEL=INFO
