# Portfolio Simulation Service Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_ENV=development
DEBUG=true

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/investment_hub

# Redis
REDIS_URL=redis://localhost:6379

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
YOUR_PRIVATE_KEY
-----END PRIVATE KEY-----

# Internal Services
INTERNAL_SERVICE_SECRET=your-internal-service-secret

# Service URLs
RISK_ENGINE_URL=http://localhost:3001
MARKET_DATA_URL=http://localhost:3002
AI_SERVICE_URL=http://localhost:3003

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text

# Portfolio Simulation Settings
SIMULATION_BATCH_SIZE=100
SIMULATION_TIMEOUT=300
ENABLE_HISTORICAL_SIMULATION=true
