# Database Configuration for Beginner Investor Hub
# This file configures the PostgreSQL database connection

# Database Connection
DATABASE_URL="postgresql://postgres:fintech_password@localhost:5432/fintech_db"

# Database Settings
DB_NAME=fintech_db
DB_USER=postgres
DB_PASSWORD=fintech_password
DB_HOST=localhost
DB_PORT=5432

# For Docker Compose (when available)
COMPOSE_PROJECT_NAME=fintech_platform

# Database Pool Settings (for production)
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=10000
DB_POOL_TIMEOUT=20000
